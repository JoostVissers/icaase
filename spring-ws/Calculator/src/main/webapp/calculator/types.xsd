<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.han.nl/schemas/types"
        xmlns:tns="http://www.han.nl/schemas/types"
        elementFormDefault="qualified">

    <complexType name="CalculateResult"> <!-- SubscriptionResult, met een bericht ok of niet en gekozen subscription methode? -->
        <all>
            <element name="value" type="int"/>
            <element name="message" type="string"/>
        </all>
    </complexType>

    <complexType name="SubscriptionInput"> <!-- SubscriptionInput, user data en SubscriptionMethod ? -->
        <all>
			<element name="paramlist" type="tns:SubscriptionUserData" minOccurs="1" maxOccurs="1"/>
			<element name="operation" type="tns:SubscriptionMethod" minOccurs="1" maxOccurs="1"/>
        </all>
    </complexType>

	<complexType name="SubscriptionUserData"> <!-- SubscriptionUserData, paypal account of bitcoin wallet ?  -->
		<sequence>
			<element name="param" type="int" minOccurs="1" maxOccurs="unbounded"/>
        </sequence>
	</complexType>

    <simpleType name="SubscriptionMethod"> <!-- SubscriptionMethod, PayPal en Bitcoin? -->
        <restriction base="NCName">
            <enumeration value="add"/>
            <enumeration value="subtract"/>
            <enumeration value="multiply"/>
            <enumeration value="divide"/>
        </restriction>
    </simpleType>
</schema>